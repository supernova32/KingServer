
= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-signin"}) do |f|
  %h3{class: "form-signin-heading"}= title t("global.sign_in")
  %small You need to have an account with us, before you can buy. Thanks!
  = f.email_field :email, class: "input-block-level", placeholder: "Email address"
  = f.password_field :password, class: "input-block-level", placeholder: "Password"
  -if devise_mapping.rememberable?
    .control-group
      .controls
        = f.check_box :remember_me, id: "rememberMe"
        = t("global.remember")
  = f.submit t("global.sign_in"), class: "btn btn-primary"
  = render "devise/shared/links"