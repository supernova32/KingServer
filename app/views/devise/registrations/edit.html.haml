%legend= title t("global.details")

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f|
  - if resource.errors.any?
    .container
      .alert.alert-danger
        %h5= "#{pluralize(resource.errors.count, "error")} prohibited this user from being saved:"
        %ul
          - resource.errors.full_messages.each do |msg|
            %li= msg

  .control-group
    = f.label :name, class: "control-label"
    .controls
      .input-prepend
        %span{class: "add-on"}
          %i{class: "icon-arrow-right"}
        = f.text_field :name
  .control-group
    = f.label :email, class: "control-label"
    .controls
      .input-prepend
        %span{class: "add-on"}
          %i{class: "icon-envelope"}
        = f.email_field :email
  .control-group
    = f.label :password, class: "control-label"
    %i= t("global.edit_user1")
    .controls
      .input-prepend
        %span{class: "add-on"}
          %i{class: "icon-lock"}
        = f.password_field :password, autocomplete: "off"
  .control-group
    = f.label :password_confirmation, class: "control-label"
    .controls
      .input-prepend
        %span{class: "add-on"}
          %i{class: "icon-lock"}
        = f.password_field :password_confirmation, autocomplete: "off"
  .control-group
    = f.label :study_course, class: "control-label"
    .controls
      .input-prepend
        %span{class: "add-on"}
          %i{class: "icon-user"}
        = f.select :study_course_id, Hash[StudyCourse.all.map{|course| [course.name, course.id]}]
  .control-group
    = f.label :current_password, class: "control-label"
    %i= t("global.edit_user2")
    .controls
      .input-prepend
        %span{class: "add-on"}
          %i{class: "icon-lock"}
        = f.password_field :current_password, autocomplete: "off"
  .control-group
    .controls
      = f.submit t("global.update"), class: "btn btn-success"

