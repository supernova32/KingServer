%legend= title t("global.sign_up")

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f|
  - if resource.errors.any?
    .container
      .alert.alert-danger
        %h5= "#{pluralize(resource.errors.count, "error")} prohibited this user from being saved:"
        %ul
          - resource.errors.full_messages.each do |msg|
            %li= msg

  .control-group
    = f.label :name, class: "control-label"
    .controls
      .input-prepend
        %span{class: "add-on"}
          %i{class: "icon-arrow-right"}
        = f.text_field :name
  .control-group
    = f.label :email, class: "control-label"
    .controls
      .input-prepend
        %span{class: "add-on"}
          %i{class: "icon-envelope"}
        = f.email_field :email
  .control-group
    = f.label :password, class: "control-label"
    .controls
      .input-prepend
        %span{class: "add-on"}
          %i{class: "icon-lock"}
        = f.password_field :password
  .control-group
    = f.label :password_confirmation, class: "control-label"
    .controls
      .input-prepend
        %span{class: "add-on"}
          %i{class: "icon-lock"}
        = f.password_field :password_confirmation
  .control-group
    = f.label :studies, class: "control-label"
    .controls
      .input-prepend
        %span{class: "add-on"}
          %i{class: "icon-user"}
        = f.text_field :studies
  .control-group
    .controls
      = f.submit t("global.register"), class: "btn btn-primary"

= render "devise/shared/links"
