= form_for @hidden_location, html: {class: "form-horizontal"} do |f|
  - if @hidden_location.errors.any?
    .container
      .alert.alert-danger
        %h2= "#{pluralize(@hidden_location.errors.count, "error")} prohibited this hidden_location from being saved:"
        %ul
          - @hidden_location.errors.full_messages.each do |msg|
            %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .actions
    = f.submit 'Save'
