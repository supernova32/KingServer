= form_for @room, html: {class: "form-horizontal"} do |f|
  - if @room.errors.any?
    .container
      .alert.alert-danger
        %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
        %ul
          - @room.errors.full_messages.each do |msg|
            %li= msg

  .field
    = f.label :building
    = f.number_field :building
  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :claimed
    = f.check_box :claimed
  .field
    = f.label :claimed_by
    = f.text_field :claimed_by
  .actions
    = f.submit 'Save'
