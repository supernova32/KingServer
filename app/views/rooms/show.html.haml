%legend Showing stats for room #{@room.building_id}/#{@room.number}

%p
  %b Claimed:
  %span{class: "label label-#{@room.set_claimed_label}"}
    = @room.claimed_status
%p
  %b Claimed by:
  = @room.claimed_by
%p
  %b Number of users checked in:
  = @room.users.size

%p
  %b Hash
  = @room.id_hash

%p
  = image_tag get_image_path(@room), width: '40%'


= link_to 'Edit', edit_room_path(@room), class: 'btn btn-warning'
= link_to 'Back', rooms_path, class: 'btn btn-inverse'
